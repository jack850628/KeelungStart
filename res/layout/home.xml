<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ww" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </android.support.v4.view.ViewPager>

             <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@+id/viewpager"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_toLeftOf="@+id/imageView1" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView2"
                        android:layout_toLeftOf="@+id/imageView2" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_toLeftOf="@+id/imageView3" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_toRightOf="@+id/imageView1" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_toRightOf="@+id/imageView5" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView6"
                        android:layout_toRightOf="@+id/imageView6" />

        </RelativeLayout>

    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/viewSwitcher1"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_weight="1"
            android:inAnimation="@anim/in_animation"
    android:outAnimation="@anim/out_animation"
         >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/button22"
                android:linksClickable="false"
                android:gravity="center_vertical|right"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/button2"
                android:layout_below="@+id/button2"
                android:layout_marginTop="48dp"
                android:background="@drawable/button_iconl"
                android:gravity="center_vertical|right"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_above="@+id/button1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/button33"
                android:gravity="center_vertical|right"
                android:textSize="25sp" />

            <Button
                android:id="@+id/lugfbut"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/button1"
                android:layout_alignBottom="@+id/button1"
                android:layout_alignLeft="@+id/button3"
                android:background="@drawable/button55"
                android:gravity="center_vertical|right"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/button6"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_alignBaseline="@+id/button7"
                android:layout_alignBottom="@+id/button7"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/brief_button"
                android:text="@string/kegjn" />

            <Button
                android:id="@+id/button7"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/button77"
                android:text="@string/menu4" />

        </RelativeLayout>
    </ViewSwitcher>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/b5"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="19dp"
                android:background="@drawable/button66"
                android:text="@string/end2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignBottom="@+id/b5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="19dp"
                android:background="@drawable/button44"
                android:text="@string/set" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>